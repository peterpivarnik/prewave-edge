<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet author="Peter Pivarnik" id="create-id-sequence">
        <createSequence sequenceName="sq_id" startValue="1"/>
    </changeSet>

    <changeSet author="Peter Pivarnik" id="create_edge_table">
        <createTable tableName="edge">
            <column name="id" type="INTEGER">
                <constraints primaryKey="true"/>
            </column>
            <column name="from_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="to_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
